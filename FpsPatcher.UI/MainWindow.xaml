<Window x:Class="FpsPatcher.UI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:FpsPatcher.UI"
        xmlns:vm="clr-namespace:FpsPatcher.UI.ViewModel"
        mc:Ignorable="d"
        Title="FPS Patcher" SizeToContent="WidthAndHeight" ResizeMode="NoResize">
    <Window.Resources>
        <vm:MainViewModel x:Key="mainViewModel"/>
    </Window.Resources>
    <Grid Margin="10" DataContext="{StaticResource mainViewModel}">
        <CheckBox x:Name="OneFrameThreadLagCheckBox" Content="r.OneFrameThreadLag" HorizontalAlignment="Left" Margin="0,28,0,0" VerticalAlignment="Top"/>
        <TextBox x:Name="FpsTextBox" HorizontalAlignment="Left" Height="23" Margin="0,0,0,0" TextWrapping="Wrap" Text="120" VerticalAlignment="Top" Width="137"/>
        <CheckBox x:Name="FinishCurrentFrameCheckBox" Content="r.FinishCurrentFrame" HorizontalAlignment="Left" Margin="0,48,0,0" VerticalAlignment="Top"/>
        <Button x:Name="PatchButton" Content="Patch" HorizontalAlignment="Left" Margin="0,68,0,0" VerticalAlignment="Top" Width="137" Click="Button_Click"/>
    </Grid>
</Window>

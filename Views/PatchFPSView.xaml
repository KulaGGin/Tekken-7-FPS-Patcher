<UserControl x:Class="Views.PatchFPSView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Views"
             mc:Ignorable="d">
    <Grid Margin="10">
        <CheckBox x:Name="OneFrameThreadLagCheckBox" Content="r.OneFrameThreadLag" HorizontalAlignment="Left" Margin="0,28,0,0" VerticalAlignment="Top"/>
        <TextBox x:Name="FpsTextBox" HorizontalAlignment="Left" Height="23" Margin="0,0,0,0" TextWrapping="Wrap" Text="120" VerticalAlignment="Top" Width="137"/>
        <CheckBox x:Name="FinishCurrentFrameCheckBox" Content="r.FinishCurrentFrame" HorizontalAlignment="Left" Margin="0,48,0,0" VerticalAlignment="Top"/>
        <Button x:Name="PatchButton" Content="Patch" HorizontalAlignment="Left" Margin="0,68,0,0" VerticalAlignment="Top" Width="137" />
    </Grid>
</UserControl>
